public class pattern12
{
	public static void main(String args[]){
	int n=9;
	for(int i=1;i<=n*2-1;i++){
		for(int j=1;j<=n*2-1;j++){
			if(i+j> && j-i<n && i-j<n && i+j<n*3){
				System.out.print("* ");
			}else System.out.print("  ");
		}
		System.out.println();
	}


