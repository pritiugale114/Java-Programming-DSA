public class pattern13
{
	public static void main(String args[]){
		int n=10;
		for(int i=1;i<=n;i++){
			for(int j=1;j<=n;j++){
				if((j>=i && i+j<=n+1) ||( i+j>=n+1 && j<=i) ){
					System.out.print("* ");
				}else System.out.print("  ");
			}
			System.out.println();
		}
	}
}

