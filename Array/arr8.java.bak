
//sum ofeven index element 
import java.util.*;
class arr8
{
	public static void main(String args[]){
		Scanner sc = new Scanner(System.in);
		System.out.print("enter the size of array:");
		int n= sc.nextInt();
		int[] arr=new int[n];
		System.out.print("enter the elements:");
		for(int i=0;i<n;i++){
			arr[i]=sc.nextInt();
		}
		intsum=0;
		for(int i=0;i<n;i++){
			if(i%2==0){
				sum+=arr[i];
			}
		}
		System.out.println("sum is:"+sum);
	}
}